# Include documentation and configuration files
include README.md
include LICENSE
include MANIFEST.in
include pyproject.toml
include requirements*.txt
include PYPI_RELEASE.md

# Include documentation files
recursive-include docs *
recursive-include examples *.py *.md
recursive-include scripts *.py

# Include test files
recursive-include tests *.py

# Include package data
recursive-include chinese_herbal_sentiment *.py
recursive-include chinese_herbal_sentiment/models *
recursive-include chinese_herbal_sentiment/api *.py
recursive-include chinese_herbal_sentiment/core *.py
recursive-include chinese_herbal_sentiment/utils *.py
recursive-include chinese_herbal_sentiment/examples *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .coverage
global-exclude .pytest_cache

# Exclude development and build files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude Makefile
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude archive *
recursive-exclude output *
recursive-exclude logs *
recursive-exclude dist *
recursive-exclude build *